{% include 'header.twig' %}
   <h2>Sign up</h2>

  {% if errors is defined %}
    {% for error in errors  %}
    <p class="bg-danger">{{ error }}</p>
    {% endfor %}
  {% endif %}

  {% if success is defined %}
    <p class="bg-success">User Registered successfully</p>
    <a href="/login">Go To Login</a>
  {% else %}
   <form method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="name" name="name" class="form-control" id="email" placeholder="Jame Smidth" value="{{ name is defined ? name : '' }}">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Email" value="{{ email is defined ? email : ''  }}">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="Password" value="{{ password is defined ? password : ''  }}">
      </div>
      <div class="form-group">
        <label for="country">Country</label>
        <input type="country" name="country" class="form-control" id="country" placeholder="Spain" value="{{ country is defined ? country : ''  }}">
      </div>
      <input type="hidden" name="timezone" class="form-control" id="timezone" />
      <button type="submit" class="btn btn-default">Sign up</button>
    </form>
  {% endif %}
{% include 'header.twig' %}
